{
    "name": "tgstation/spambothoneypot",
    "type": "phpbb-extension",
    "description": "Honeypot for spambots. When a user without delete mod permissions posts in a hardcoded forum, the account is deactivated, their ip banned, all posts pending approval are disapproved, and their pm outbox is cleared.",
    "homepage": "https://tgstation13.org",
    "version": "1.0.0-dev",
    "time": "2022-11-18",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Kyle Spier-Swenson",
            "email": "kyle@kyle.software",
            "homepage": "https://kyle.software",
            "role": "Host"
        }
    ],
    "require": {
        "php": ">=5.4",
        "composer/installers": "~1.0"
    },
    "extra": {
        "display-name": "Spam Bot Honeypot",
        "soft-require": {
            "phpbb/phpbb": ">=3.2.0,<4.0.0@dev"
        }
    }
}
